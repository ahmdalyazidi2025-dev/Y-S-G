rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if isAdmin();
    }

    // Customer Profiles (Admin Access + Owner Access)
    match /customers/{customerId} {
      allow read, write: if isAdmin();
      allow read, update: if request.auth != null && request.auth.uid == customerId;
    }

    // Staff Profiles (Admin Only)
    match /staff/{staffId} {
      allow read, write: if isAdmin();
      allow read: if request.auth != null && request.auth.uid == staffId; // Staff can read own profile
    }

    // Public Read, Admin Write
    match /products/{docId} { allow read: if true; allow write: if isAdmin(); }
    match /categories/{docId} { allow read: if true; allow write: if isAdmin(); }
    match /banners/{docId} { allow read: if true; allow write: if isAdmin(); }
    match /storeSettings/{docId} { allow read: if true; allow write: if isAdmin(); }
    match /settings/{docId} { allow read: if true; allow write: if isAdmin(); }

    // Orders: Owner or Admin
    match /orders/{orderId} {
      allow create: if request.auth != null; // Only authenticated users
      allow read: if isAdmin() || (request.auth != null && resource.data.customerId == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // Product Requests
    match /requests/{requestId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // Join Requests: Admin only (Creation handled by Server Action)
    match /joinRequests/{requestId} {
      allow read, delete: if isAdmin();
      allow create: if false; // Block client-side creation, force Server Action
    }

    // Messages & Notifications
    match /messages/{msgId} {
      allow create: if true; // Both guests and customers can send
      allow read: if isAdmin() || resource.data.userId == 'all' || (request.auth != null && resource.data.userId == request.auth.uid) || (resource.data.userId == request.auth.uid) || true; // Let the where query handle it safely
      allow update: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }
    
    match /notifications/{notifId} {
       allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
       allow create: if isAdmin() || request.auth != null; // Allow system triggers
       allow update: if request.auth != null && resource.data.userId == request.auth.uid; // For mark as read
       allow delete: if isAdmin();
    }

    match /password_requests/{reqId} {
       allow create: if true; // Allowed via Server Action/Client
       allow read, update, delete: if isAdmin();
    }

    match /coupons/{code} {
       allow read: if true;
       allow write: if isAdmin();
    }

    // Allow access to counters for order ID generation
    match /counters/{docId} {
      allow read: if true; 
      allow write: if request.auth != null;
    }

    // Analytics: Visitors tracking
    match /analytics_visits/{date} {
      allow read: if isAdmin();
      allow create, update: if true; 
    }

    match /{document=**} {
      allow read, write: if false; // Deny all other access by default
    }
  }
}
