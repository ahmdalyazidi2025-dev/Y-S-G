rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /{document=**} {
      allow read: if true;
      // Allow write if admin OR if it's a customer writing to specific collections (we keep it open for now for compatibility, but prioritize admin check)
      allow write: if true; 
    }
  }
}
